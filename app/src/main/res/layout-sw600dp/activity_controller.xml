<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mdpgrp4.mdpremote.MainActivity"
    tools:menu="@menu/menu_main_popup">

    <Button
        android:id="@+id/forwardBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_marginLeft="115dp"
        android:text="@string/ctrForward"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="68dp" />

    <Button
        android:id="@+id/leftBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_marginTop="13dp"
        android:text="@string/ctrLeft"
        app:layout_constraintTop_toBottomOf="@+id/forwardBtn"
        app:layout_constraintRight_toLeftOf="@+id/forwardBtn"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/rightBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="@string/ctrRight"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/forwardBtn"
        app:layout_constraintLeft_toRightOf="@+id/forwardBtn"
        android:layout_marginLeft="7dp" />

    <Button
        android:id="@+id/reverseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="@string/ctrReverse"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/forwardBtn"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/forwardBtn" />

    <Button
        android:id="@+id/function_b_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/function_b_btn"
        android:layout_marginRight="70dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="103dp" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="69dp"
        android:layout_height="39dp"
        android:text="@string/save"
        android:onClick="save"
        app:layout_constraintLeft_toRightOf="@+id/function_b_edit"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/function_b_edit"
        android:layout_marginBottom="0dp" />


    <Button
        android:id="@+id/loadBtn"
        android:layout_width="69dp"
        android:layout_height="39dp"
        android:onClick="load"
        android:text="@string/load"
        app:layout_constraintBottom_toBottomOf="@+id/function_a_edit"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/function_a_edit"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/function_b_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/function_b_string"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="301dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/function_a_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="@string/function_a_btn"
        app:layout_constraintTop_toTopOf="@+id/function_b_btn"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/function_b_btn" />

    <TextView
        android:id="@+id/function_a_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/function_a_string"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/function_a_edit"
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginBottom="-30dp"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/function_a_string"
        app:layout_constraintLeft_toRightOf="@+id/function_a_string" />

    <EditText
        android:id="@+id/function_b_edit"
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@+id/function_b_string"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/function_b_string"
        android:layout_marginBottom="0dp" />

</android.support.constraint.ConstraintLayout>
